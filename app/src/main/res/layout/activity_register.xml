<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@mipmap/background2"
    tools:context=".User.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/edittext_username"
        android:drawableLeft="@mipmap/username"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="2dp"
        android:background="#ffffff"
        android:hint="   username"/>

    <EditText
        android:id="@+id/edittext_password"
        android:drawableLeft="@mipmap/password"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:hint="   password"/>

    <EditText
        android:id="@+id/edittext_cnf_password"
        android:drawableLeft="@mipmap/password"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:hint="   confirm_password"/>

    <EditText
        android:id="@+id/edittext_morning"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/food"
        android:background="#ffffff"
        android:hint="   morning"/>

    <EditText
        android:id="@+id/edittext_afternoon"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/food"
        android:background="#ffffff"
        android:hint="   afternoon"/>

    <EditText
        android:id="@+id/edittext_evening"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/food"
        android:background="#ffffff"
        android:hint="   evening"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#04ea00"
        android:textColor="#ffffff"
        android:text="register"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#0A0808"
            android:text="already_registered"/>

        <TextView
            android:id="@+id/textview_login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#04ea00"
            android:textSize="16sp"
            android:text="login"/>

    </LinearLayout>

</LinearLayout>
